    "@types/jest": "28.1.6",
    "@types/node": "17.0.40",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "@typescript-eslint/parser": "5.30.6",
    "babel-jest": "28.1.3",
    "css-loader": "6.7.1",
    "dotenv-webpack": "8.0.0",
    "eslint": "8.20.0",
