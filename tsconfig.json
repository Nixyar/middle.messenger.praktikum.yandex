{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@core": ["core"],
      "@services": ["src/services"],
      "@utils": ["src/utils"]
    },
    "target": "es2017",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types", "typings/app.d.ts"],
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  }
}
